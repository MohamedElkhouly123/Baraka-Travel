<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/golds"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="3dp"
        app:cardCornerRadius="@dimen/_4sdp"
        android:layout_marginTop="@dimen/_4sdp"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_4sdp"
        android:clickable="true"
        android:focusable="true"
        app:cardBackgroundColor="@android:color/white"
        android:foreground="?selectableItemBackground"
        >
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#A1161616"
            >


            <!--        <androidx.cardview.widget.CardView-->
            <!--            android:id="@+id/lin_client_img"-->
            <!--            android:layout_width="match_parent"-->
            <!--            android:layout_height="match_parent"-->
            <!--            app:cardCornerRadius="@dimen/_5sdp"-->
            <!--            android:background="@drawable/trangle_white_shape"-->
            <!--            >-->


<!--            <ImageView-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="@dimen/_200sdp"-->
<!--                android:background="#A1161616"-->
<!--                />-->
            <!--        </androidx.cardview.widget.CardView>-->
            <LinearLayout
                android:id="@+id/cardview_book_hotels_item_status_ly"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:gravity="center|left"
                android:visibility="visible"
                android:layout_marginTop="@dimen/_7sdp"
                android:layout_marginEnd="@dimen/_7sdp"
                android:padding="@dimen/_5sdp"
                android:orientation="horizontal"
                android:background="@drawable/complete_green_shape"
                >

                <TextView
                    android:id="@+id/cardview_book_hotels_item_status_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/_9ssp"
                    android:layout_marginStart="@dimen/_6sdp"
                    android:layout_marginEnd="@dimen/_4sdp"
                    android:text="Pending"
                    android:textColor="@color/white" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/_6sdp"
                android:layout_gravity="center"
                android:orientation="vertical"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center"
                    android:elevation="@dimen/_5sdp"
                    >
                    <TextView
                        android:id="@+id/cardview_book_hotels_item_user_name_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Name : test"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_10ssp"
                        />

                    <TextView
                        android:id="@+id/cardview_book_hotels_item_hotel_name_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Package Name"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_10ssp"
                        />

                    <TextView
                        android:id="@+id/cardview_book_hotels_item_from_to_date_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Date"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_10ssp"
                        />

                    <TextView
                        android:id="@+id/cardview_book_hotels_item_type_of_room_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Type of Room"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_10ssp"
                        />
                    <TextView
                        android:id="@+id/cardview_book_hotels_item_number_of_nights_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Number Of Nights"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:textSize="@dimen/_10ssp"
                        android:textColor="@color/white"
                        />
                    <TextView
                        android:id="@+id/cardview_book_hotels_item_address_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Address"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:textSize="@dimen/_10ssp"
                        android:textColor="@color/white"
                        />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="2"
                        >
                        <TextView
                            android:id="@+id/cardview_book_hotels_item_price_tv"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Price : $30 / Night"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:layout_weight="1"
                            android:textSize="@dimen/_10ssp"
                            android:textColor="@color/white"
                            />
                        <TextView
                            android:id="@+id/cardview_book_hotels_item_total_price_tv"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Total Price : $300"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:layout_weight="1"
                            android:textSize="@dimen/_10ssp"
                            android:textColor="@color/white"
                            />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/cardview_book_hotels_item_discription_btn"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_22sdp"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:textSize="@dimen/_9ssp"
                        android:gravity="center"
                        android:padding="@dimen/_5sdp"
                        android:background="@drawable/yeloo_btn"
                        android:text="@string/discription"
                        android:textColor="@color/white"
                        android:textStyle="bold"

                        />
                </LinearLayout>
            </LinearLayout>
        </FrameLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>