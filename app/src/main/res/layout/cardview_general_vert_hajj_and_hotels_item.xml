<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="@dimen/_13sdp"
    android:paddingTop="@dimen/_5sdp"
    android:paddingEnd="@dimen/_13sdp"
    android:paddingBottom="@dimen/_5sdp"
    >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/top_hotels_packages"
        android:textSize="@dimen/_18ssp"
        android:layout_marginTop="@dimen/_10sdp"
        android:textStyle="normal"
        android:visibility="visible"
        android:layout_marginBottom="@dimen/_15sdp"
        style="@style/LoginAndSignUpTextView"
        />
    <ImageView
        android:id="@+id/cardview_item_client_food_order_menu_img"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_95sdp"
        android:background="@drawable/round_image"
        android:scaleType="centerCrop"
        android:src="@drawable/haj" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/_8sdp"
        >
        <TextView
            android:id="@+id/cardview_item_client_food_order_menu_tv_meal_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$ 787"
            android:textColor="@color/txt_color_red"
            android:textStyle="bold"
            android:textSize="@dimen/_13ssp"
            />
        <TextView
            android:id="@+id/t3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:text="@string/night"
            android:visibility="visible"
            android:textColor="@color/gray_text_color" />
        <LinearLayout
            android:id="@+id/cardview_general_vert_hajj_and_hotels_item_additional_part"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="visible"
            >
        <TextView
            android:id="@+id/tx2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:textSize="@dimen/_12ssp"
            android:text="13 sep"
            android:textColor="@color/graydate" />
        <ImageView
            android:id="@+id/arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:src="@drawable/ic_trending_flat_black_24dp" />
        <TextView
            android:id="@+id/tx4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:textSize="@dimen/_12ssp"
            android:text="19 sep"
            android:textColor="@color/graydate" />
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Madinah Movenpick Hotel"
        android:layout_marginTop="@dimen/_6sdp"
        android:textColor="@color/black"
        android:textSize="@dimen/_12ssp"
        />
</LinearLayout>