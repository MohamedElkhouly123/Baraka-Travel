<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="@dimen/_13sdp"
    android:paddingTop="@dimen/_5sdp"
    android:paddingEnd="@dimen/_13sdp"
    android:paddingBottom="@dimen/_5sdp">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/top_umrah_packages"
        android:textSize="@dimen/_16ssp"
        android:layout_marginTop="@dimen/_10sdp"
        android:textStyle="normal"
        android:visibility="visible"
        android:layout_marginBottom="@dimen/_15sdp"
        style="@style/LoginAndSignUpTextView"
        />
    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/_5sdp"
        app:cardElevation="0dp"
        >
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/round_image"
        >

    <ImageView
        android:id="@+id/cardview_item_client_food_order_menu_img"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_95sdp"
        android:scaleType="centerCrop"
        android:background="@drawable/round_image"
        android:src="@drawable/haj" />
        <ImageView
            android:id="@+id/shadow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="visible"
            android:layout_gravity="right"
            android:background="@drawable/offer_white_shape"
            android:src="@drawable/ic_whatshot_black_24dp" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="bottom"
            android:layout_marginStart="@dimen/_8sdp"
            android:layout_marginEnd="@dimen/_8sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:gravity="center"
            >

        <TextView
            android:id="@+id/tv_rate_and_nights_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="11 Nights"
            android:textColor="@color/white"
            android:textStyle="bold"
            />
<!--            4.2 11 Nights-->
<!--        android:drawablePadding="@dimen/_4sdp"-->
<!--        android:drawableEnd="@drawable/ic_rate"-->
            <ImageView
                android:layout_width="@dimen/_15sdp"
                android:layout_height="@dimen/_15sdp"
                android:visibility="gone"
                android:layout_gravity="right"
                android:layout_marginEnd="@dimen/_4sdp"
                android:layout_marginStart="@dimen/_4sdp"
                android:src="@drawable/ic_rate" />
        </LinearLayout>
    </FrameLayout>
    </androidx.cardview.widget.CardView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/_8sdp"
        >
        <TextView
            android:id="@+id/cardview_item_client_food_order_menu_tv_meal_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$ 787"
            android:textColor="@color/txt_color_red"
            android:textStyle="bold"
            android:textSize="@dimen/_13ssp"
            />
        <TextView
            android:id="@+id/t3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:text="@string/night"
            android:visibility="visible"
            android:textColor="@color/gray_text_color" />
        <LinearLayout
            android:id="@+id/cardview_general_vert_hajj_and_hotels_item_additional_part"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="visible"
            >
            <TextView
                android:id="@+id/tx2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:textSize="@dimen/_12ssp"
                android:text="13 sep"
                android:textColor="@color/graydate" />
            <ImageView
                android:id="@+id/arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:src="@drawable/ic_trending_flat_black_24dp" />
            <TextView
                android:id="@+id/tx4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:textSize="@dimen/_12ssp"
                android:text="19 sep"
                android:textColor="@color/graydate" />
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Madinah Movenpick Hotel"
        android:layout_gravity="left"
        android:layout_marginTop="@dimen/_2sdp"
        android:textColor="@color/black"
        android:textSize="@dimen/_11ssp"
        />
</LinearLayout>