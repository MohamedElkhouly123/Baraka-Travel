<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Button">
        <item name="android:fontFamily">@font/janna</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/_13ssp</item>
        <item name="android:background">@drawable/gradient_btn_red_shape</item>
        <item name="android:layout_marginStart">@dimen/_70sdp</item>
        <item name="android:layout_marginEnd">@dimen/_70sdp</item>
<!--        <item name="android:layout_marginTop">@dimen/_12sdp</item>-->
        <item name="android:textStyle">bold</item>
    </style>

</resources>
